<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/swLang"
        android:layout_width="177dp"
        android:layout_height="36dp"
        android:layout_marginTop="128dp"
        android:background="#A5D6A7"
        android:gravity="center"
        android:text="Language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/swGrafics"
        android:layout_width="179dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:background="#A5D6A7"
        android:gravity="center"
        android:text="Grafics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swLang" />

    <EditText
        android:id="@+id/edEdText"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:background="#A5D6A7"
        android:ems="10"
        android:hint="Enter nickname"
        android:inputType="textPersonName"
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swGrafics" />

    <Switch
        android:id="@+id/swAutosave"
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:background="#A5D6A7"
        android:gravity="center"
        android:text="Autosave "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEdText"
        app:layout_constraintVertical_bias="0.222" />
</androidx.constraintlayout.widget.ConstraintLayout>